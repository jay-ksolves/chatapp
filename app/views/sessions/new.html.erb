   <p> <h1 class="text-center">Sign In to Jerry</h1></p>
  
    <%= form_for (:session) do |f| %>
      <%= f.label :username, 'User Name' ,class:"form-label" %>
        <%= f.text_field :username, autocomplete: 'off' ,class: "form-control" , placeholder: "Enter your username" %>

          <%= f.label :email, 'Email ID' ,class:"form-label" %>
            <%= f.text_field :email, autocomplete: 'off' ,class: "form-control" , placeholder: "Enter your Email ID" %>
              <br>
              <%= f.submit 'Sign in' ,class:"btn btn-info spa fa-solid "%>
                <% end %>
  </div>
